extends ../base

block content
    if errorMessage
        span=errorMessage 
    form(method="POST")
        input(name="username",placeholder="User Name",type="text",required)
        input(name="password",placeholder="Password",type="password",required)
        input(type="submit", placeholder="Submit",value="Login")
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr
    div
        span Don't have and account? 
        a(href="/join") Create one now &rarr;